<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Orders - BookNest</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">

  <style>
    body {
      background: linear-gradient(135deg, #f3f8ff, #e6ecf5);
      padding-top: 70px;
      font-family: 'Poppins', sans-serif;
    }
    h2 {
      font-weight: 700;
      color: #2c3e50;
    }
    .card {
      border: none;
      border-radius: 12px;
      overflow: hidden;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 18px rgba(0, 0, 0, 0.08);
    }
    .card-body {
      background: #fff;
      border-left: 5px solid #007bff;
    }
    .order-img {
      width: 60px;
      height: 80px;
      object-fit: cover;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    .table {
      border-radius: 8px;
      overflow: hidden;
    }
    .table thead {
      background-color: #f8f9fa;
    }
    .table tbody tr:hover {
      background-color: #f1f6ff;
    }
    .badge {
      padding: 0.45em 0.7em;
      border-radius: 8px;
      font-size: 0.85rem;
      font-weight: 500;
    }
    .btn-outline-danger.btn-sm, .btn-outline-info.btn-sm {
      border-radius: 8px;
      font-size: 0.85rem;
      transition: all 0.3s ease;
    }
    .btn-outline-danger:hover {
      background-color: #dc3545;
      color: #fff;
    }
    .btn-outline-info:hover {
      background-color: #0dcaf0;
      color: #fff;
    }
    .delivery-info {
      background: #f9fafc;
      border-radius: 8px;
      padding: 10px 15px;
      margin-top: 15px;
      border-left: 4px solid #17a2b8;
    }
    .modal-content {
      border-radius: 12px;
    }
  </style>
</head>
<body>

<!-- ======= NAVBAR ======= -->
<%- include('partials/header') %>

<!-- ======= ORDERS CONTENT ======= -->
<div class="container mt-3">
  <h2 class="text-center mb-4">üì¶ Your Orders</h2>

  <% if (orders.length > 0) { %>
    <% orders.forEach(order => { %>
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center flex-wrap">
            <h5 class="card-title text-primary mb-2">üßæ Order ID: <%= order._id %></h5>
            <span class="text-muted small"><i class="bi bi-calendar3"></i> <%= order.orderDate %></span>
          </div>

          <p class="mb-1"><strong>üìç Address:</strong> <%= order.address %></p>
          <p class="mb-3"><strong>üìû Contact:</strong> <%= order.phone %></p>

          <!-- Order Items Table -->
          <div class="table-responsive mt-3">
            <table class="table align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>Cover</th>
                  <th>Book</th>
                  <th>Price (‚Çπ)</th>
                </tr>
              </thead>
              <tbody>
                <% order.items.forEach(item => { %>
                  <tr>
                    <td class="text-center">
                      <img src="<%= item.image || '/src/books/default-book.png' %>" alt="<%= item.title %>" class="order-img">
                    </td>
                    <td><%= item.title %></td>
                    <td><strong>‚Çπ<%= item.price.toFixed(2) %></strong></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Order Summary -->
          <div class="mt-3 border-top pt-2">
            <p><strong>Total:</strong> ‚Çπ<%= order.grandTotal %></p>
            <p><strong>Payment:</strong> <%= order.paymentMethod || 'Prepaid' %> 
              <% if (order.paymentStatus === 'Paid') { %>
                <span class="badge bg-success">Paid</span>
              <% } else if (order.paymentStatus === 'Pending') { %>
                <span class="badge bg-warning text-dark">Pending</span>
              <% } else if (order.paymentStatus === 'Failed') { %>
                <span class="badge bg-danger">Failed</span>
              <% } else if (order.paymentStatus === 'Refunded') { %>
                <span class="badge bg-info text-dark">Refunded</span>
              <% } %>
            </p>

            <% if(order.paymentMethod === "Razorpay" && order.razorpayPaymentId) { %>
              <p><small><strong>Razorpay ID:</strong> <%= order.razorpayPaymentId %></small></p>
            <% } %>
          </div>

          <!-- Delivery Info -->
          <div class="delivery-info mt-3">
            <p class="mb-1"><strong>üìÖ Expected Delivery:</strong> <%= order.deliveryDate %></p>
            <p class="mb-1"><strong>üöö Partner:</strong> <%= order.deliveryPartner %></p>
            <p class="mb-0"><strong>üì¶ Status:</strong>
              <% if (order.status === 'Delivered') { %>
                <span class="badge bg-success">Delivered</span>
              <% } else if (order.status === 'Cancelled') { %>
                <span class="badge bg-danger">Cancelled</span>
                <span class="badge bg-danger">Refund Processing</span>
              <% } else { %>
                <span class="badge bg-warning text-dark">Processing</span>
              <% } %>
            </p>
          </div>

          <!-- Cancel Button (same-day only & Processing) -->
          <% if (order.status === 'Processing' && order.orderDate === today) { %>
            <div class="d-flex align-items-center gap-2 mt-3">
              <button type="button" class="btn btn-outline-danger btn-sm btn-cancel-order" 
                      data-bs-toggle="modal" data-bs-target="#cancelModal"
                      data-order-id="<%= order._id %>">
                <i class="bi bi-x-circle me-1"></i> Cancel Order
              </button>
              <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#termsModal">
                <i class="bi bi-info-circle"></i> Terms
              </button>
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="text-center py-5">
      <img src="/images/empty-box.svg" alt="No Orders" class="mb-3" width="120">
      <p class="text-muted">You have no orders yet. Start shopping <a href="/products" class="text-primary fw-semibold">here</a>!</p>
    </div>
  <% } %>
</div>

<!-- ======= CANCEL CONFIRMATION MODAL ======= -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-light">
        <h5 class="modal-title text-danger">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Cancellation
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to cancel this order? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">No, Keep Order</button>
        <form id="cancelForm" method="POST">
          <button type="submit" class="btn btn-danger rounded-pill px-4">Yes, Cancel Order</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- ======= TERMS & CONDITIONS MODAL ======= -->
<div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-light">
        <h5 class="modal-title" id="termsModalLabel"><i class="bi bi-info-circle me-2 text-info"></i>Order Cancellation Terms</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul class="mb-0">
          <li>Order cancellation is only allowed on the same day of purchase.</li>
          <li>Orders already shipped cannot be cancelled.</li>
          <li>Refunds will be processed within 5‚Äì7 business days.</li>
          <li>Refunds are credited to the original payment method.</li>
          <li>BookNest reserves the right to deny cancellation if the order is packed or dispatched.</li>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Dynamically set order ID for cancel form
  const cancelModal = document.getElementById('cancelModal');
  const cancelForm = document.getElementById('cancelForm');

  cancelModal.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;
    const orderId = button.getAttribute('data-order-id');
    cancelForm.action = `/orders/cancel/${orderId}`;
  });
</script>

</body>
</html>