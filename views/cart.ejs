<!DOCTYPE html>
<html lang="en">
<head>
  <title>Shopping Cart - BookNest</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style> body { padding-top: 65px; } </style>
</head>
<body>

<!-- ======= NAVBAR ======= -->
<%- include('partials/header') %>

<!-- ======= MAIN ======= -->
<div class="container mt-5">
  <h2 class="mb-4">üõí Shopping Cart</h2>

  <% if (cart.length > 0) {
      const subtotal = cart.reduce((sum, item) => sum + item.price, 0);
      const grandTotal = subtotal;
  %>

  <!-- Cart Table -->
  <div class="table-responsive">
    <table class="table table-bordered align-middle text-center">
      <thead class="table-dark">
        <tr>
          <th>Cover</th>
          <th>Title</th>
          <th>Author</th>
          <th>Price (‚Çπ)</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach((item, index) => { %>
          <tr>
            <td><img src="<%= item.image || '/images/default-book.png' %>" alt="<%= item.title %>" class="img-thumbnail" style="width: 60px;"></td>
            <td class="text-start"><%= item.title %></td>
            <td><%= item.author %></td>
            <td>‚Çπ<%= item.price.toFixed(2) %></td>
            <td><a href="/cart/remove/<%= index %>" class="btn btn-sm btn-danger">Remove</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="text-center">
       <a href="/products" class="btn btn-primary mb-3"><i class="fas fa-shopping-cart"></i> ‚Üê Continue Shopping</a>
    </div>
  </div>

  <!-- Total -->
  <div class="mt-4">
    <h4><strong>Total: ‚Çπ<%= grandTotal.toFixed(2) %></strong></h4>
  </div>

  <!-- Notices -->
  <p class="text-danger fw-bold mt-3">‚ö† Once an order is placed, it can be canceled on same day only.</p>
  <p class="text-danger fw-bold">‚ö† We only deliver within India.</p>

  <!-- ‚úÖ Shipping Form -->
  <form id="checkout-form" class="mt-4">
    <div class="mb-3">
      <label for="address" class="form-label">Shipping Address</label>
      <textarea name="address" id="address" class="form-control" rows="3" required placeholder="Enter full address"></textarea>
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">Phone Number</label>
      <input 
        type="tel" 
        name="phone" 
        id="phone" 
        class="form-control" 
        pattern="[0-9]{10}" 
        maxlength="10" 
        oninput="this.value=this.value.replace(/[^0-9]/g,'')" 
        required 
        placeholder="Enter 10-digit phone number"
      >
    </div>
    <% if (razorpayOrder) { %>
      <button type="button" onclick="payNow()" class="btn btn-success w-100">Confirm & Pay</button>
    <% } else { %>
      <p class="text-muted">Add items to cart to proceed with payment.</p>
    <% } %>
  </form>

  <% } else { %>
    <div class="text-center mt-5">
      <p class="text-muted fs-5">üõí Your cart is empty!</p>
      <a href="/products" class="btn btn-primary mt-3">‚Üê Browse Books</a>
    </div>
  <% } %>
</div>

<!-- Razorpay Checkout -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  function payNow() {
    const phone = document.getElementById("phone").value.trim();
    const address = document.getElementById("address").value.trim();

    if (!phone || phone.length !== 10) {
      alert("Please enter a valid 10-digit phone number before proceeding.");
      return;
    }

    if (!address) {
      alert("Please enter a shipping address before proceeding.");
      return;
    }

    const options = {
      key: "<%= razorpayKey %>",
      amount: "<%= razorpayOrder?.amount %>",
      currency: "<%= razorpayOrder?.currency %>",
      name: "BookNest",
      description: "Order Payment",
      image: "https://book-nest-wgrp.onrender.com/src/logo.png", // Logo displayed in Razorpay popup
      order_id: "<%= razorpayOrder?.id %>",
      handler: function (response) {
        fetch("/cart/verify-payment", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ ...response, phone, address }),
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            window.location.href = "/orders";
          } else {
            alert("Payment verification failed! Please contact support.");
          }
        })
        .catch(err => {
          console.error(err);
          alert("Something went wrong during payment verification.");
        });
      },
      prefill: {
        name: "<%= user?.username || 'Guest' %>",
        email: "<%= user?.email || '' %>",
        contact: phone,
      },
      theme: { color: "#28a745" },
    };

    const rzp1 = new Razorpay(options);
    rzp1.open();
  }
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>