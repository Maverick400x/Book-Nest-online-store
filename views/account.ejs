<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Account Settings - BookNest</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #f7faff, #eef2f8);
      font-family: 'Poppins', sans-serif;
      padding-top: 70px;
    }

    h2 {
      font-weight: 700;
      color: #2c3e50;
    }

    .card {
      border: none;
      border-radius: 12px;
      transition: all 0.2s ease-in-out;
    }

    .card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 18px rgba(0, 0, 0, 0.07);
    }

    .card-body {
      background-color: #fff;
      border-left: 4px solid #0d6efd;
      border-radius: 0 12px 12px 0;
    }

    .form-label {
      font-weight: 500;
      color: #444;
    }

    .form-control, textarea {
      border-radius: 8px;
      transition: all 0.2s;
    }

    .form-control:focus, textarea:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
      border-radius: 10px;
      font-weight: 500;
      background: linear-gradient(90deg, #0d6efd, #0dcaf0);
      border: none;
      transition: all 0.2s ease-in-out;
    }

    .btn-primary:hover {
      background: linear-gradient(90deg, #0b5ed7, #0bbce2);
    }

    .alert {
      border-radius: 10px;
      font-weight: 500;
    }

    .card-title {
      color: #0d6efd;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .card-title i {
      font-size: 1.3rem;
      color: #0d6efd;
    }

    hr {
      opacity: 0.2;
    }
  </style>
</head>
<body>

  <!-- ======= HEADER ======= -->
  <%- include('./partials/header', { title: 'Account Settings' }) %>

  <!-- ======= ACCOUNT DASHBOARD ======= -->
  <div class="container my-5 px-3 px-md-5">
    <h2 class="text-center mb-4">👤 Account Dashboard</h2>

    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8">

        <!-- Account Info -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h4 class="card-title mb-3"><i class="bi bi-person-circle"></i> Account Info</h4>
            <p><strong>Full Name:</strong> <%= user.fullName || "Not provided" %></p>
            <p><strong>Username:</strong> <%= user.username %></p>
            <p><strong>Email:</strong> <%= user.email %></p>

            <% if (user.address || user.phone) { %>
              <hr>
              <h5 class="mb-3 text-secondary"><i class="bi bi-house-door me-1"></i> Shipping Info</h5>
              <% if (user.address) { %>
                <p><strong>Address:</strong> <%= user.address %></p>
              <% } %>
              <% if (user.phone) { %>
                <p><strong>Phone:</strong> +91 <%= user.phone %></p>
              <% } %>
            <% } %>
          </div>
        </div>

        <!-- Update Contact Info -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h4 class="card-title mb-3"><i class="bi bi-pencil-square"></i> Update Contact Info</h4>
            <div id="popupAlert" class="alert d-none" role="alert"></div>

            <form id="updateForm">
              <div class="mb-3">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" name="fullName" id="fullName" class="form-control"
                  value="<%= user.fullName || '' %>" placeholder="Your full name" required>
              </div>

              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control"
                  value="<%= user.username %>" required>
              </div>

              <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="text" name="phone" id="phone" class="form-control" placeholder="e.g. 9876543210"
                  value="<%= user.phone !== 'Not available' ? user.phone : '' %>">
              </div>

              <div class="mb-3">
                <label for="address" class="form-label">Shipping Address</label>
                <textarea name="address" id="address" class="form-control" rows="3" placeholder="Enter your shipping address"><%= user.address !== 'Not available' ? user.address : '' %></textarea>
              </div>

              <button type="submit" class="btn btn-primary w-100 py-2">
                <i class="bi bi-save2 me-2"></i>Save Info
              </button>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- ======= FOOTER ======= -->
  <%- include('./partials/footer') %>

  <!-- ======= SCRIPTS ======= -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const form = document.getElementById("updateForm");
    const alertBox = document.getElementById("popupAlert");

    form.addEventListener("submit", async function (e) {
      e.preventDefault();

      const formData = {
        fullName: document.getElementById("fullName").value.trim(),
        username: document.getElementById("username").value.trim(),
        phone: document.getElementById("phone").value.trim(),
        address: document.getElementById("address").value.trim(),
      };

      try {
        const res = await fetch("/users/update-info", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
        });

        const result = await res.json();
        const alertType = res.ok ? "success" : "danger";
        showAlert(result.message, alertType);

        if (res.ok) setTimeout(() => location.reload(), 1500);
      } catch (err) {
        showAlert("❌ Network error. Please try again.", "danger");
      }
    });

    function showAlert(message, type) {
      alertBox.textContent = message;
      alertBox.className = `alert alert-${type}`;
      alertBox.classList.remove("d-none");
      setTimeout(() => alertBox.classList.add("d-none"), 3000);
    }
  </script>
</body>
</html>